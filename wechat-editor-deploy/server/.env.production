# 生产环境配置
# 数据库配置 (生产环境请使用PostgreSQL)
DATABASE_URL="postgresql://wechat_user:your_db_password@localhost:5432/wechat_editor_prod"

# JWT密钥 (必须修改为强密码，不要泄露)
JWT_SECRET="YOUR_PRODUCTION_JWT_SECRET_MUST_BE_CHANGED"
JWT_EXPIRES_IN="7d"

# 服务器配置
PORT=3002
NODE_ENV="production"

# CORS设置 (根据实际域名修改)
FRONTEND_URL="https://yourdomain.com"

# 管理员配置 (用于查看统计数据)
ADMIN_EMAIL="your@email.com"

# 文件上传配置
UPLOAD_PATH="/app/uploads"
MAX_FILE_SIZE="10485760"

# 日志配置
LOG_LEVEL="info"
LOG_FILE="/app/logs/app.log"

# 数据库连接池配置
DATABASE_POOL_SIZE="10"

# 安全配置
BCRYPT_ROUNDS="12"
SESSION_SECRET="your_session_secret"

# 第三方服务配置（可选）
# SENTRY_DSN="your_sentry_dsn"
# REDIS_URL="redis://localhost:6379"